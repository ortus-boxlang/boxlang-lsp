    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Run LSP",
            "request": "launch",
            "mainClass": "ortus.boxlang.runtime.BoxRunner",
            "projectName": "boxlang-lsp",
            "env": {
                "BOXLANG_HOME": "${workspaceFolder}/.boxlang_home",
                "xBOXLANG_CONFIG": "boxlang.json",
                "BOXLANG_MODULESDIRECTORY": "${workspaceFolder}/build"
            },
            "args": [
                "module:bx-lsp",
                "--debug-server-port",
                "7777"
            ]
        },
        {
            "type": "java",
            "name": "Run LSP Version",
            "request": "launch",
            "mainClass": "ortus.boxlang.runtime.BoxRunner",
            "projectName": "bx-lsp-boxlang-lsp",
            "env": {
                "BOXLANG_RUNTIME_MODULESDIRECTORY": "/Users/jacob/dev/ortus-boxlang/boxlang-lsp/build"
            },
            "args": [
                "--bx-config",
                "/Users/jacob/dev/ortus-boxlang/boxlang-lsp/boxlang.json",
                "module:bx-lsp",
                "version"
            ]
        }
    ]
}